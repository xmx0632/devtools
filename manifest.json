{
  "manifest_version": 3,
  "name": "DevTools",
  "version": "1.0",
  "description": "A crypto tool for developers",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "windows"]
}